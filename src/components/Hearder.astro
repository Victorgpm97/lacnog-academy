---
const navLinks = [
  { name: "Home", href: "/" },
  { name: "Eventos", href: "/events" },
  { name: "Contenido", href: "/contents" },
  { name: "Blog", href: "/blog" },
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-[#FEA723] rounded-xl shadow-md flex items-center justify-center">
          <span class="text-white font-bold text-lg">A</span>
        </div>
        <span class="text-2xl font-bold text-[#323232]">Academy</span>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex" aria-label="Main navigation">
        <ul class="flex space-x-8">
          {navLinks.map(link => (
            <li>
              <a href={link.href} class="text-[#4E5059] hover:text-[#323232] font-medium transition-colors duration-200 relative group px-4 py-2">
                {link.name}
                <span class="absolute -bottom-1 left-4 w-0 h-0.5 bg-[#FEA723] transition-all duration-200 group-hover:w-8"></span>
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Mobile Menu Button -->
      <button id="menu-toggle" class="md:hidden text-[#323232] focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <nav id="mobile-menu" class="md:hidden hidden mt-2" aria-label="Mobile navigation">
      <ul class="flex flex-col space-y-2">
        {navLinks.map(link => (
          <li>
            <a href={link.href} class="block text-[#4E5059] hover:text-[#323232] font-medium px-4 py-2 transition-colors duration-200">
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>

  <!-- Script to toggle mobile menu -->
  <script is:inline>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</header>
