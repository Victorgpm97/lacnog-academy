---
import ModalButton from '../components/ModalButton.tsx';
import BlogCards from '../components/BlogCards.astro';
import EventosProximosView from './EventosProximosView';

---

<div class="min-h-screen bg-linear-to-br from-neutral-seasalt to-white overflow-x-hidden">
    <header class="bg-white shadow-lg border-b border-[#F8F8F8] sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16 flex-wrap sm:flex-nowrap">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-[#FEA723] rounded-xl shadow-md flex items-center justify-center">
                        <span class="text-white font-bold text-lg">A</span>
                    </div>
                    <span class="text-2xl font-bold text-[#323232]">Academy</span>
                </div>
            </div>
        </div>
    </header>

    <section class="py-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto text-center">
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-[#323232] mb-6 animate-fade-in">
                Bienvenido a <span class="bg-[#FEA723] bg-clip-text text-transparent">Academy</span>
            </h1>
            <p class="text-base sm:text-lg md:text-xl text-[#4E5059] max-w-3xl mx-auto mb-12 animate-slide-up">
                Descubre el futuro del aprendizaje con IA, conecta con expertos y mantente a la vanguardia de la tecnología
            </p>
        </div>
    </section>
<section class="py-8 px-4">
  <div class="max-w-4xl mx-auto">
    <nav class="bg-white rounded-full px-4 py-2 shadow-lg border border-gray-200 w-full">
      <div class="flex flex-wrap sm:flex-nowrap justify-between items-center gap-2 text-center">
        <!-- Home -->
        <a href="/" class="flex-1 flex flex-col items-center gap-1 px-2 py-2 text-xs sm:text-sm rounded-full text-[#4E5059] hover:text-[#323232] font-medium transition duration-200 relative group">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9.75L12 3l9 6.75V21a1.5 1.5 0 01-1.5 1.5H4.5A1.5 1.5 0 013 21V9.75z" />
          </svg>
          <span>Home</span>
          <span class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-[#FEA723] transition-all duration-200 group-hover:w-8"></span>
        </a>

        <!-- Events -->
        <a href="/events" class="flex-1 flex flex-col items-center gap-1 px-2 py-2 text-xs sm:text-sm rounded-full text-[#4E5059] hover:text-[#323232] font-medium transition duration-200 relative group">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>Events</span>
          <span class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-[#FEA723] transition-all duration-200 group-hover:w-8"></span>
        </a>

        <!-- Content -->
        <a href="/contents" class="flex-1 flex flex-col items-center gap-1 px-2 py-2 text-xs sm:text-sm rounded-full text-[#4E5059] hover:text-[#323232] font-medium transition duration-200 relative group">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4h10M7 8h10M7 12h4m-4 4h10M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>Content</span>
          <span class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-[#FEA723] transition-all duration-200 group-hover:w-8"></span>
        </a>

        <!-- Communities -->
        <a href="/blog" class="flex-1 flex flex-col items-center gap-1 px-2 py-2 text-xs sm:text-sm rounded-full text-[#4E5059] hover:text-[#323232] font-medium transition duration-200 relative group">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a4 4 0 00-5-4M9 20h6M3 20h5v-2a4 4 0 00-5-4M16 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <span class="block sm:hidden">Comm.</span>
          <span class="hidden sm:block">Communities</span>
          <span class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-[#FEA723] transition-all duration-200 group-hover:w-8"></span>
        </a>
      </div>
    </nav>
  </div>
</section>

